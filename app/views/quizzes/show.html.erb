<%= render 'shared/head' %>

<p>
  <h4>Name:</h4>
  <%= @quiz.name %>
</p>

<p>
  <h4>Instructions:</h4>
  <%= @quiz.instructions %>
</p>

<p>
  <h4>Due Date:</h4>
  <%= @quiz.due_date %>
</p>

<p>
  <h4>Appearance Time:</h4>
  <%= @quiz.appearance_time %>
</p>

<p>
  <h4>Module:</h4>
  <% if @quiz.group %>
  <%= link_to @quiz.group.name, course_group_path(@course,@quiz.group) %>
  <% end %>
</p>

<p>
	<ul>
	<h4>Questions:</h4>
	<%= render @questions %>
	</ul>
</p>


<%= link_to 'Edit', edit_course_quiz_path(@course,@quiz) %> |
<%= link_to 'Back', course_quizzes_path(@course) %>
