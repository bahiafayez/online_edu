  setup_play = function()
  {
  	$("#play-me").click(function(event){
  		if($(this).hasClass("pause"))
  		{
  			$(this).removeClass("pause");
  			player.pauseVideo();
  			play=0;
  		}
  		else{
  			$(this).addClass("pause");
  			play=1;
  			player.playVideo();
  		}
  	});
  }
  
  setup_mute= function()
  {
  	$("#mute-me").click(function(event){
  		if($(this).hasClass("mute"))
  		{
  			$(this).removeClass("mute")
  			player.mute();
  		}
  		else{
  			$(this).addClass("mute")
