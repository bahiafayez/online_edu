	{
		$("#resizable").width(width)
		remaining= wbig-width;
		$("#left").width(remaining/2.0 - 30)
		$("#right").width(remaining/2.0 - 30)
	}
	
	if($("#resizable").width() + 260 > $("#top").width()) // does not maintain 16:9 aspect ratio anymore.
	{
		$("#resizable").width(wbig-260)
		$("#left").width(100)
		$("#right").width(100)
	}
	
