<%= simple_form_for([@course,@group], :html => { :class => 'form-horizontal' }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :name %>
    <%= f.input :description , :input_html => {:style => 'width: 210px; height: 100px'} %>
    <div class="row">
    	<div class="span6">
    		<%= f.association :lectures, :as => :check_boxes, :collection => Lecture.where(:course_id => @course.id) %>  <!-- or better without checkbox.. multiple select? -->
    	</div>
    	<div class="span6">
    		<%= f.association :quizzes, :as => :check_boxes, :collection => Quiz.where(:course_id => @course.id) %>  <!-- or better without checkbox.. multiple select? -->
    	</div>
  </div>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
