	console.debug(storedData2)
	
	$.getJSON('<%= save_answers2_course_lecture_path(@course, @lecture) %>',{"stored":storedData2}, function(resp){
		console.debug(resp)
		console.debug("calling redirect")
		$('#notify').html("<div class='alert alert-success'>Saved</div>")
