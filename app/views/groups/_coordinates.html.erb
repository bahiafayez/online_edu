}
function load(elem)
{
	// When call popover, its loaded from here.
	console.debug("elem is "+elem)
	document.getElementById("correct_"+elem).checked=storedData[elem][0]
	document.getElementById("explain_"+elem).value=storedData[elem][1]
}

