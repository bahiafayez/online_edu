		console.debug("key:"+storedData[key])
		//storedData2[key].push.apply(storedData2[key],storedData[key],[$('#'+key).position().top,$('#'+key).position().left]);
		storedData2[key]= storedData[key].concat([$('#'+key).position().top,$('#'+key).position().left])
	}
