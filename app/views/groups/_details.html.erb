<center>
<h3>Details</h3>
<%= form_for([@course,group2], :remote => true) do |f| %>
<table class="table table-striped table-bordered" style="width:90%;font-size:12px;text-align: center">
<tr>
<td>Module Name:</td><td> <%= f.text_field :name, :size => 15, :style => "height:17px;width:140px;font-size:12px;"%></td>
</tr>
<tr>
<td>Appearance Date: </td><td> <%= f.text_field :appearance_time ,:class => "date_picker",:style => "height:25px;width: 120px;font-size:12px;" %></td>
</tr>
<tr>
<td>Due Date:</td><td><%= f.text_field :due_date  , :class =>"date_picker" ,:style => "height:25px;width: 120px;font-size:12px;"%></td>
</tr>
<tr>
<td>Description:</td><td><%= f.text_area :description,:size=>15 ,:style => "width:140px;font-size:12px;height:80px;" %></td>
</tr>
</table>
<%= f.submit "Save Module", :class => "btn"%>
<% end %>
</center>

