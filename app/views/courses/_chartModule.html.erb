<div id="container2" style="min-width: 400px; height: 100%; margin: 0 auto"></div><br><br />



<script>
$(function () {
    var chart2;
    $(document).ready(function() {
        chart2 = new Highcharts.Chart({
            chart: {
                renderTo: 'container2',
                type: 'bar',
                height: <%= @chart_data.length*100 + 150 %>
            },
            title: {
                text: '<%= @modulechart.name %> Lecture Questions'
            },
            subtitle: {
                text: 'number of students with answer'
            },
            xAxis: {
                categories: <%= raw @qnames.values %>,
                labels:{
                useHTML: true}
                // <%= raw @chart_data.keys %>
            },
            yAxis: {
                min: 0,
                allowDecimals: false,
                title: {
                    text: 'Number of Students'
                }
            },
            legend: {
            	enabled: false,
                layout: 'vertical',
                backgroundColor: '#FFFFFF',
                align: 'left',
                verticalAlign: 'top',
                x: 100,
                y: 70,
                floating: true,
                shadow: true
            },
            tooltip: {
                formatter: function() {
                    return ''+
                        this.series.name+': '+ this.y +' student(s)<br>'+question(this.point.x, this.series.name);
                }
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
                // series: [{
                // name: 'Tokyo',
                // data: [0,49.9, 71.5, 106.4, 129.2, 144.0, 176.0, 135.6, 148.5, 216.4, 194.1, 95.6]
//     
            // }, {
                // name: 'New York',
                // data: [83.6, 78.8, 98.5, 93.4, 106.0, 84.5, 105.0, 104.3, 91.2, 83.5, 106.6, 92.3]
//     
            // }, {
                // name: 'London',
                // data: [48.9, 38.8, 39.3, 41.4, 47.0, 48.3, 59.0, 59.6, 52.4, 65.2, 59.3, 51.2]
//     
            // }, {
                // name: 'Berlin',
                // data: [42.4, 33.2, 34.5, 39.7, 52.6, 75.5, 57.4, 60.4, 47.6, 39.1, 46.8, 51.1]
//     
            // }]
            series: <%= raw @otherway %>
        });
        
        var cor = <%= raw @correct %>
        console.debug("correct isssss"+cor)
      //  console.debug(chart2.series[4].data)
       // chart2.series[4].data[0].update({
       // 	color:'green'
       // })
       
        
        // make all gray
        for(var i=0; i<chart2.series.length; i++)
        {
        	for(var j=0; j<chart2.series[i].data.length; j++)
        	{
        		console.debug("over here")
        		chart2.series[i].data[j].update({
        		color:'gray'
        	});
        	}
        }
        
        // make correct ones green
        for(element in cor)
        {
        	ans=cor[element]
        	//check if nil first.
        	if(ans!=null){
        	chart2.series[ans].data[element].update({
        		color:'green'
        	});
        	}
        }
        
    // $('.highcharts-axis-labels text').click(function(){ alert($(this).text());  });    
    });

    
});
           
function question(x, y)
{
	console.log(x)
	console.log(y)
	var answers= <%= raw @answers %>
	var all= answers[x]
	var newy=(y.split(" "))[1]
	return all[parseInt(newy)-1]
}



            </script>
