<div id="container2" style="min-width: 400px; height: 100%; margin: 0 auto"></div><br><br />



<script>
$(function () {
    var chart2;
    $(document).ready(function() {
        chart2 = new Highcharts.Chart({
            chart: {
                renderTo: 'container2',
                type: 'bar',
                height: <%= @student_progress.length*60 %>
            },
            title: {
                text: '<%= @p %> '
            },
            subtitle: {
                text: ''
            },
            xAxis: {
                categories: <%= raw @student_progress.values.map {|v| v=v[0]} %>
            },
            yAxis: {
                min: 0,
                allowDecimals: false,
                title: {
                    text: 'Progress'
                }
            },
            legend: {
            	layout: 'vertical',
                align: 'right',
                verticalAlign: 'top',
                x: 0,
                y: -10,
                floating: true,
                borderWidth: 1,
                backgroundColor: '#FFFFFF',
                shadow: true
            },
            tooltip: {
                formatter: function() {
                    return ''+
                        this.series.name+': '+ parseInt(this.y) +' %';
                }
            },
            plotOptions: {
                column: {
                    pointPadding: 0.2,
                    borderWidth: 0
                }
            },
                // series: [{
                // name: 'Tokyo',
                // data: [0,49.9, 71.5, 106.4, 129.2, 144.0, 176.0, 135.6, 148.5, 216.4, 194.1, 95.6]
//     
            // }, {
                // name: 'New York',
                // data: [83.6, 78.8, 98.5, 93.4, 106.0, 84.5, 105.0, 104.3, 91.2, 83.5, 106.6, 92.3]
//     
            // }, {
                // name: 'London',
                // data: [48.9, 38.8, 39.3, 41.4, 47.0, 48.3, 59.0, 59.6, 52.4, 65.2, 59.3, 51.2]
//     
            // }, {
                // name: 'Berlin',
                // data: [42.4, 33.2, 34.5, 39.7, 52.6, 75.5, 57.4, 60.4, 47.6, 39.1, 46.8, 51.1]
//     
            // }]
            series: getSeries()
        });
        
        
    });

    
});
           
function getSeries()
{
	var studentProgress= <%= raw @student_progress_json %>
        x=[{"name":'Quiz', "data":[]}, {"name":'Lecture', "data":[]}, {"name":'Lecture Quizzes', "data":[]}]
        for(key in studentProgress)
        {	
        	//console.debug(studentProgress[key][1])
        	x[0].data.push(studentProgress[key][1])
        	x[1].data.push(studentProgress[key][2])
        	x[2].data.push(studentProgress[key][3])
        }
        
        console.debug(x)
        return x
}

            </script>
